<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
    <Appenders>
        <File name="FileLogger" fileName="logs/hippodrome.log">
            <PatternLayout pattern="[%p] %d{yyyy-MM-dd HH:mm:ss} %c{1} - %m%n"/>
        </File>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>